{
  "name": "vscode-byebug-remote",
  "displayName": "vscode-byebug-remote",
  "description": "Remote debug support by byebug",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.16.1",
    "eslint": "7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "requiresWorkspaceTrust": "onStart",
  "activationEvents": [
    "workspaceContains:**/*.rb",
    "onLanguage:rub"
  ],
  "contributes": {
    "commands": [
      {
        "command": "byebug.connect",
        "title": "Byebug: Connect to remote",
        "description": "Connect to a remote instance of byebug"
      }
    ],
    "breakpoints": [
      {
        "language": "ruby"
      }
    ],
    "debuggers": [
      {
        "type": "ruby",
        "label": "Ruby",
        "program": "./dist/debugAdapter.js",
        "runtime": "node",
        "languages": [
          "go"
        ],
        "variables": {
          "pickProcess": "ruby.debug.pickProcess"
        },
        "configurationAttributes": {
          "attach": {
            "required": [
              "server"
            ],
            "properties": {
              "server": {
                "type": "string",
                "description": "Connection address"
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "Byebug: Connect to server",
            "description": "Connect to a remote instance of byebug"
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ruby Remote Debugger",
      "properties": {
        "byebug.connection": {
          "type": "string",
          "default": "localhost:12345",
          "description": "Default server connection string for byebug",
          "scope": "resource"
        }
      }
    },
    "menus": {
    }
  }
}
